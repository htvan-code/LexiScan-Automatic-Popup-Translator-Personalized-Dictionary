<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ContextMenu x:Key="MainTrayMenu" 
                 Style="{StaticResource MaterialDesignContextMenu}" 
                 Width="150" 
                 Background="#1E1E1E" 
                 Padding="0"
                 TextElement.Foreground="White"
                 FontSize="12">
        <ContextMenu.Resources>
            <Style TargetType="MenuItem" BasedOn="{StaticResource MaterialDesignMenuItem}">
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </ContextMenu.Resources>

        <MenuItem Header="Main app" x:Name="MenuOpen" FontWeight="SemiBold">
            <MenuItem.Icon>
                <materialDesign:PackIcon Kind="ViewDashboard" Width="16" Height="16" Foreground="White" Margin="-2"/>
            </MenuItem.Icon>
        </MenuItem>

        <Separator Background="#444444" Margin="0"/>

        <MenuItem Header="Startup" x:Name="MenuStartup" IsCheckable="True"/>

        <Separator Background="#444444" Margin="0"/>

        <MenuItem Header="Exit" x:Name="MenuExit">
            <MenuItem.Icon>
                <materialDesign:PackIcon Kind="ExitToApp" Width="16" Height="16" Foreground="White" Margin="-2"/>
            </MenuItem.Icon>
        </MenuItem>

    </ContextMenu>
</ResourceDictionary>