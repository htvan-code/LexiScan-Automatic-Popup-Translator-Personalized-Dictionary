<Window x:Class="ScreenTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="Translator Popup" Height="150" Width="300"
        SizeToContent="Height" MinHeight="100" MaxHeight="300"
        
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        
        Topmost="True" ShowInTaskbar="False" 
        Left="-9999" Top="-9999">

    <Border Background="#FFFFFFFF" 
            BorderBrush="#FFDDDDDD" 
            BorderThickness="1"
            CornerRadius="12" 
            Padding="15"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="GoogleTranslate" 
                                         Foreground="#E91E63"
                                         Width="20" Height="20" 
                                         VerticalAlignment="Center" Margin="0,0,8,0"/>

                <TextBlock Text="Kết quả dịch (Giữ chuột để kéo)" 
                           FontWeight="Bold" FontSize="12" 
                           Foreground="#555555"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="txtResult" 
                       Grid.Row="1" 
                       TextWrapping="Wrap" 
                       FontSize="15" 
                       Foreground="#222222"/>
        </Grid>
    </Border>
</Window>