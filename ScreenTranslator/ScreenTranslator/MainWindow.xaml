<Window x:Class="ScreenTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translator Popup" 
        Height="150" Width="300"
        
        SizeToContent="Height" MinHeight="100" MaxHeight="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" 
        
        ShowInTaskbar="False" 
        
        
        Left="-9999" Top="-9999">

    <Border Background="White" CornerRadius="10" Padding="15"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Kết quả dịch (Kéo để di chuyển):" 
                       FontWeight="Bold" Foreground="#888" FontSize="10" Margin="0,0,0,5"/>

            <TextBlock x:Name="txtResult" 
                       Grid.Row="1" 
                       TextWrapping="Wrap" 
                       FontSize="14" 
                       Foreground="#333"/>
        </Grid>
    </Border>
</Window>