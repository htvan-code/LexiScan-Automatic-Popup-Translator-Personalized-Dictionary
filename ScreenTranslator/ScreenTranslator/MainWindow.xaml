<Window x:Class="ScreenTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translator Popup" Height="150" Width="300"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True" 
        ShowInTaskbar="False"
        Visibility="Hidden">
    <Border Background="White" CornerRadius="10" Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Kết quả dịch:" FontWeight="Bold" Foreground="#444" Margin="0,0,0,5"/>

            <TextBlock x:Name="txtResult" Grid.Row="1" 
                       Text="Đang chờ..." 
                       TextWrapping="Wrap" 
                       FontSize="14"/>
        </Grid>
    </Border>
</Window>