<Window x:Class="LexiScan.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexiScan.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="920"
        ResizeMode="NoResize">
    <Window.Resources>

        <!-- SỬ DỤNG DYNAMIC RESOURCE TRONG STYLES -->
        <Style x:Key="SidebarNavigationStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="SidebarGroup"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5">

                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Màu nền khi rê chuột -->
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <!-- Màu nền khi được chọn -->
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource SelectedBackgroundColor}"/>
                                <!-- Màu chữ/icon khi được chọn -->
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Background -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SidebarColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,1,0" 
                Padding="15">
            <StackPanel>

                <!-- User Profile Section -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <!-- Icon nền Primary Color -->
                    <Border Width="40" Height="40" CornerRadius="20" Background="{DynamicResource PrimaryColor}" VerticalAlignment="Center" Margin="5,0,10,0">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <!-- User Text -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Người dùng" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource PrimaryForeground}"/>
                        <TextBlock Text="Đã đăng nhập" FontSize="11" Foreground="{DynamicResource SecondaryForeground}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation RadioButtons (Sử dụng SidebarNavigationStyle đã sửa) -->
                <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Home" IsChecked="True">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="Trang chủ"/>
                    </StackPanel>
                </RadioButton>
                <!-- ... các RadioButton khác ... -->
                <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="PersonalDictionary">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8B9;" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="Từ điển cá nhân"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="History">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="Lịch sử tra cứu"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Translation">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE756;" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="Dịch văn bản"/>
                    </StackPanel>
                </RadioButton>

                <!-- Separator -->
                <Rectangle Height="1" Fill="{DynamicResource BorderColor}" Margin="0,15"/>

                <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Settings">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE713;" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="Cài đặt"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>