<Window x:Class="LexiScan.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LexiScan.App.ViewModels"
        xmlns:view="clr-namespace:LexiScan.App.Views" 
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        
        mc:Ignorable="d"
        Title="LexiScan"
        Height="600"
        Width="920"
        ResizeMode="CanResize"
        Background="Transparent" 
        AllowsTransparency="True" 
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DictionaryViewModel}">
            <view:DictionaryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PersonalDictionaryViewModel}">
            <view:PersonalDictionaryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
            <view:HistoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TranslationViewModel}">
            <view:TranslationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <view:SettingsView />
        </DataTemplate>

        <Style x:Key="SidebarNavigationStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="SidebarGroup"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="ButtonBorder" CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource BorderColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryAccent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="{DynamicResource AppBackground}" CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border Background="{DynamicResource CardBackground}" CornerRadius="20,0,0,20" />

                    <StackPanel Margin="15,20,15,20">

                        <materialDesign:PackIcon Kind="BookAlphabet" 
                                                 Width="48" Height="48" 
                                                 Foreground="{DynamicResource PrimaryAccent}" 
                                                 HorizontalAlignment="Center" 
                                                 Margin="0,0,0,10"/>
                        <TextBlock Text="LexiScan" 
                                   FontSize="24" 
                                   FontWeight="ExtraBold" 
                                   Foreground="{DynamicResource PrimaryAccent}" 
                                   Margin="0,0,0,25" HorizontalAlignment="Center"/>

                        <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Home" IsChecked="True">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" Style="{StaticResource SidebarIconStyle}"/>
                                <TextBlock Text="Trang chủ"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="PersonalDictionary">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8B9;" Style="{StaticResource SidebarIconStyle}"/>
                                <TextBlock Text="Từ điển cá nhân"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="History">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE81C;" Style="{StaticResource SidebarIconStyle}"/>
                                <TextBlock Text="Lịch sử tra cứu"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Translation">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE756;" Style="{StaticResource SidebarIconStyle}"/>
                                <TextBlock Text="Dịch văn bản"/>
                            </StackPanel>
                        </RadioButton>

                        <Rectangle Height="1" Fill="{DynamicResource BorderColor}" Margin="0,15"/>

                        <RadioButton Style="{StaticResource SidebarNavigationStyle}" Command="{Binding NavigateCommand}" CommandParameter="Settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" Style="{StaticResource SidebarIconStyle}"/>
                                <TextBlock Text="Cài đặt"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" >
                    <ContentControl Content="{Binding CurrentView}" Foreground="{DynamicResource PrimaryText}" />
                </Grid>

                <Button x:Name="CloseApp"
                        Grid.ColumnSpan="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="{DynamicResource SecondaryText}"
                        FontSize="14"
                        Width="30"
                        Height="30"
                        Click="CloseApp_Click" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,10,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4D4D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Window>