<Application x:Class="LexiScan.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >

    <Application.Resources>
        <ResourceDictionary>

            <!-- ================= MATERIAL DESIGN CORE ================= -->
            <ResourceDictionary.MergedDictionaries>

                <!-- Material Design base -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />

                <!-- Material Design theme (DARK là mặc định ban đầu) -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />

                <!-- Material primary / secondary colors -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Pink.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml" />

                <!-- ================= APP THEMES ================= -->

                <!-- THEME CHÍNH (Dark / Light sẽ swap ở runtime) -->
                <ResourceDictionary Source="pack://application:,,,/LexiScan.App;component/Themes/DarkTheme.xaml"/>

                <!-- Scrollbar custom -->
                <ResourceDictionary Source="pack://application:,,,/LexiScan.App;component/Themes/ScrollBarStyle.xaml"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
