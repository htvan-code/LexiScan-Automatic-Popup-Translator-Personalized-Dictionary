<Application x:Class="LexiScan.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LexiScan.App.ViewModels"
             xmlns:v="clr-namespace:LexiScan.App.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Khai báo một ResourceDictionary duy nhất làm container cho tất cả các tài nguyên -->
        <ResourceDictionary>

            <!-- Định nghĩa các Data Templates -->
            <DataTemplate DataType="{x:Type vm:DictionaryViewModel}">
                <v:DictionaryView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PersonalDictionaryViewModel}">
                <v:PersonalDictionaryView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                <v:HistoryView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TranslationViewModel}">
                <v:TranslationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView />
            </DataTemplate>

            <!-- Các Resource Dictionaries đã được Merge (Theme,...) -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Khai báo Theme Light (Mặc định) -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>
    