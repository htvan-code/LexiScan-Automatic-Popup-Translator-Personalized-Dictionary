<Application x:Class="LexiScan.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LexiScan.App"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             xmlns:vm="clr-namespace:LexiScan.App.ViewModels"
             xmlns:view="clr-namespace:LexiScan.App.Views"
             
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary>

                    <DataTemplate DataType="{x:Type vm:DictionaryViewModel}">
                        <view:DictionaryView />
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:PersonalDictionaryViewModel}">
                        <view:PersonalDictionaryView />
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                        <view:HistoryView />
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:TranslationViewModel}">
                        <view:TranslationView />
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                        <view:SettingsView />
                    </DataTemplate>

                </ResourceDictionary>

                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="Blue"
                                             SecondaryColor="Indigo"/>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>