<UserControl x:Class="LexiScan.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="592"
             Background="White">

    <!-- 🟦 Global Styles -->
    <UserControl.Resources>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF0771DD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#FFEDEDED"/>
            <Setter Property="BorderBrush" Value="#FFA19898"/>
        </Style>

    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Grid.Row="0"
                   FontSize="28" FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="#FF0C39E8">
            <Run Text="⚙️ LexiScan Settings"/>
        </TextBlock>


        <!-- SCROLL CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="550" HorizontalAlignment="Left">


                <!-- 🔶 HOTKEY -->
                <GroupBox Header="Phím Tắt &amp; Tương Tác Hệ Thống">
                    <StackPanel Margin="15">

                        <TextBlock Text="Phím Tắt Kích Hoạt (Hotkey):"
                                   FontWeight="SemiBold" Foreground="#FF0C39E8"/>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Name="HotkeyTextBox"
                                     Text="Ctrl + Space"
                                     IsReadOnly="True"
                                     Height="30"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"
                                     BorderBrush="#FFA19898"/>

                            <Button Grid.Column="1" Width="110" BorderBrush="White" Background="#FFD5EEFF">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                        Kind="Keyboard"
                                        Width="18" Height="18"
                                        Margin="0,0,6,0"/>
                                    <TextBlock Text="Thiết Lập"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <CheckBox Content="Hiển thị icon quét sau khi chọn văn bản"
                                  IsChecked="True"
                                  Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>


                <!-- 🟩 THEME SECTION -->
                <GroupBox Header="Giao Diện &amp; Màu Sắc">
                    <StackPanel Margin="15">

                        <TextBlock Text="Chủ Đề (Theme):"
                                   FontWeight="SemiBold" Foreground="#FF2A50E9"/>

                        <ComboBox Name="ThemeComboBox"
                                  SelectedIndex="0"
                                  Width="220"
                                  Margin="0,5,0,15" BorderBrush="White">
                            <ComboBoxItem Content="Chủ Đề Sáng (Light)"/>
                            <ComboBoxItem Content="Chủ Đề Tối (Dark)"/>
                            <ComboBoxItem Content="Tùy chỉnh"/>
                        </ComboBox>

                        <TextBlock Text="Màu Accent Chính:"
                                   FontWeight="SemiBold" Foreground="#FF2A50E9"/>

                        <TextBox Text="#30A8FF"
                                 Width="200"
                                 Height="30"
                                 Margin="0,5,0,0"/>

                        <CheckBox Content="Bật chế độ đọc tự động khi dịch xong"
                                  Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>


                <!-- 🟥 DATA MANAGEMENT -->
                <GroupBox Header="Quản Lý Dữ Liệu">
                    <StackPanel Margin="15">

                        <CheckBox Content="Lưu lịch sử tra cứu vào Từ điển cá nhân"
                                  IsChecked="True"/>

                        <Button Width="240" Margin="0,15,0,0" Background="#FFD5EEFF" BorderBrush="White">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon 
                                    Kind="DeleteForever"
                                    Width="20" Height="20"
                                    Margin="0,0,6,0"/>
                                <TextBlock Text="Xóa Toàn Bộ Lịch Sử Tra Cứu"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>


        <!-- FOOTER BUTTONS -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">

            <Button Width="120" Background="#FFD5EEFF" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" Width="18" Margin="0,0,6,0"/>
                    <TextBlock Text="Hủy Bỏ"/>
                </StackPanel>
            </Button>

            <Button Name="SaveSettingsButton" Width="150" Margin="10,0,0,0" Background="#FFD5EEFF" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSave" Width="18" Margin="0,0,6,0"/>
                    <TextBlock Text="Lưu Cài Đặt"/>
                </StackPanel>
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
