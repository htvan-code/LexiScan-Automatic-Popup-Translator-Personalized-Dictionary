<UserControl x:Class="LexiScan.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="815.27" d:DesignWidth="592"
             Background="White">

    <UserControl.Resources>
        <!-- Styles đã giữ nguyên -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF0771DD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#FFEDEDED"/>
            <Setter Property="BorderBrush" Value="#FFA19898"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="28" FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="#FF0C39E8">
            <Run Text="⚙️ LexiScan Settings"/>
        </TextBlock>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="550" HorizontalAlignment="Left">

                <GroupBox Header="Phím Tắt &amp; Tương Tác Hệ Thống">
                    <StackPanel Margin="15">
                        <TextBlock Text="Phím Tắt Kích Hoạt (Hotkey):"
                                   FontWeight="SemiBold" Foreground="#FF0C39E8"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Name="HotkeyTextBox"
                                     Text="Ctrl + Space"
                                     IsReadOnly="True"
                                     Height="30"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"
                                     BorderBrush="#FFA19898"/>

                            <Button Grid.Column="1" Width="110" BorderBrush="White" Background="#FFD5EEFF">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                        Kind="Keyboard"
                                        Width="18" Height="18"
                                        Margin="0,0,6,0"/>
                                    <TextBlock Text="Thiết Lập"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <CheckBox Content="Hiển thị icon quét sau khi chọn văn bản"
                                  IsChecked="True"
                                  Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- ĐÃ SỬA: SỬ DỤNG RADIO BUTTONS THAY CHO COMBOBOX -->
                <GroupBox Header="Phát Âm (Speech)">
                    <StackPanel Margin="15">

                        <!-- Tốc độ phát âm (Sử dụng RadioButton) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="VolumeHigh" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#333"/>
                            <TextBlock Text="Tốc độ phát âm" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                            <!-- GroupName là BẮT BUỘC để đảm bảo chỉ chọn được 1 trong 3 -->
                            <RadioButton Content="Chậm hơn" GroupName="SpeedGroup" Margin="0,0,20,0"/>
                            <RadioButton Content="Chậm" GroupName="SpeedGroup" Margin="0,0,20,0"/>
                            <RadioButton Content="Bình thường" GroupName="SpeedGroup" IsChecked="True"/>
                        </StackPanel>

                        <!-- Giọng Phát âm Mặc định (Sử dụng RadioButton) -->
                        <TextBlock Text="Âm thanh mặc định" FontWeight="SemiBold" Foreground="#FF2A50E9" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                            <RadioButton Content="Anh Anh" GroupName="VoiceGroup" IsChecked="True" Margin="0,0,20,0"/>
                            <RadioButton Content="Anh Mỹ" GroupName="VoiceGroup"/>
                        </StackPanel>

                        <!-- Tự động phát âm khi tra từ (Sử dụng CheckBox, đã có sẵn) -->
                        <TextBlock Text="Tự động phát âm khi tra từ" FontWeight="SemiBold" Foreground="#FF2A50E9" Margin="0,5,0,0"/>
                        <CheckBox Content="Tự động phát âm" IsChecked="True" Margin="0,5,0,0"/>

                        <!-- CheckBox còn lại -->
                        <CheckBox Content="Bật chế độ đọc tự động khi dịch xong" Margin="0,5,0,0"/>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Giao Diện">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Chủ Đề Tối"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="#333"/>

                            <ToggleButton Name="ToggleDarkMode"
                                          Margin="10,0" IsChecked="False" VerticalAlignment="Center"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          ToolTip="Bật để chuyển sang Chủ Đề Tối"/>

                            <TextBlock Text="Chủ Đề Sáng"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Quản Lý Dữ Liệu">
                    <StackPanel Margin="15">
                        <CheckBox Content="Lưu lịch sử tra cứu vào Từ điển cá nhân"
                                  IsChecked="True"/>
                        <Button Width="240" Margin="0,15,0,0" Background="#FFD5EEFF" BorderBrush="White" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon 
                                    Kind="DeleteForever"
                                    Width="20" Height="20"
                                    Margin="0,0,6,0"/>
                                <TextBlock Text="Xóa Toàn Bộ Lịch Sử Tra Cứu"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">

            <Button Width="120" Background="#FFD5EEFF" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" Width="18" Margin="0,0,6,0"/>
                    <TextBlock Text="Hủy Bỏ"/>
                </StackPanel>
            </Button>

            <Button Name="SaveSettingsButton" Width="150" Margin="10,0,0,0" Background="#FFD5EEFF" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSave" Width="18" Margin="0,0,6,0"/>
                    <TextBlock Text="Lưu Cài Đặt"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>