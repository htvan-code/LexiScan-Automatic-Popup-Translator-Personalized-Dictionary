<UserControl x:Class="LexiScan.App.Views.PersonalDictionaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LexiScan.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource BackgroundColor}">
    <!-- ĐỊNH NGHĨA STYLES TẠI ĐÂY (UserControl.Resources) -->
    <UserControl.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectedBackgroundColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyleRed" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <!-- Giữ màu đỏ cho nút Delete -->
            <Setter Property="Foreground" Value="#FF4D4D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <!-- KẾT THÚC ĐỊNH NGHĨA STYLES -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Phần Header: Tiêu đề, Thanh Tìm kiếm và Nút Thêm Mới -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Từ điển Cá nhân" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,5"/>
            <TextBlock Text="Quản lý bộ từ vựng và ghi chú của riêng bạn." FontSize="14" Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,15" FontStyle="Italic"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Thanh Tìm kiếm/Lọc -->
                <Border Grid.Column="0" Background="{DynamicResource SidebarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource PrimaryColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0" 
                                 Background="Transparent" 
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 Foreground="{DynamicResource PrimaryForeground}"
                                 d:Text="Tìm kiếm từ khóa hoặc định nghĩa..."
                                 Width="350"/>
                    </StackPanel>
                </Border>

                <!-- Nút Thêm Từ Mới -->
                <Button Grid.Column="1"
                        Content="Thêm Từ Mới"
                        Command="{Binding AddNewWordCommand}"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="White"
                        FontSize="14"
                        Padding="15,8"
                        HorizontalAlignment="Right">
                    <!-- ĐÃ SỬA LỖI: Loại bỏ Click="Button_Click" -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHoverColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Hiển thị Danh sách Từ vựng -->
        <Border Grid.Row="1" Background="{DynamicResource SidebarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="10">
            <ListView ItemsSource="{Binding FilteredWords}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      BorderThickness="0"
                      Background="Transparent">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Padding" Value="0,5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid>
                                        <!-- ĐÃ SỬA: Loại bỏ VisualStateManager và ColorAnimation -->
                                        <!-- Màu nền của Border sẽ được set động trong Triggers -->
                                        <Border x:Name="Border" Background="Transparent" Padding="10">
                                            <ContentPresenter/>
                                        </Border>
                                        <!-- Đường phân cách -->
                                        <Border Height="1" Background="{DynamicResource BorderColor}" VerticalAlignment="Bottom" Margin="0,5,0,0"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <!-- Sử dụng Setter trực tiếp để áp dụng DynamicResource -->
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource SelectedBackgroundColor}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <!-- Màu khi được chọn -->
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource SelectedBackgroundColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <!-- Từ khóa chính -->
                                <TextBlock Text="{Binding Word}" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryForeground}"/>
                                <!-- Định nghĩa/Ghi chú tóm tắt -->
                                <TextBlock Text="{Binding DefinitionPreview}" FontSize="13" Foreground="{DynamicResource SecondaryForeground}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Nút Chỉnh sửa và Xóa -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="&#xE70F;" 
                                        FontFamily="Segoe MDL2 Assets"
                                        ToolTip="Chỉnh sửa từ"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.EditWordCommand}"
                                        CommandParameter="{Binding .}"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource IconButtonStyle}"/>

                                <Button Content="&#xE74D;" 
                                        FontFamily="Segoe MDL2 Assets"
                                        ToolTip="Xóa từ"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.DeleteWordCommand}"
                                        CommandParameter="{Binding .}"
                                        Style="{StaticResource IconButtonStyleRed}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

    </Grid>
</UserControl>