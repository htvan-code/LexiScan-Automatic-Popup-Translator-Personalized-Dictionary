<Window x:Class="LexiScanUI.View.PopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        MinWidth="260"
        MaxWidth="420"
        SizeToContent="Height"
        MaxHeight="600"
        Height="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Background="Transparent"
          MouseLeftButtonDown="DragArea_MouseLeftButtonDown">

        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="18"
                Padding="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.32"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Toolbar -->
                    <RowDefinition Height="*"/>
                    <!-- Scroll -->
                </Grid.RowDefinitions>

                <!-- ================= TOOLBAR ================= -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,4">

                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding ReadAloudCommand}">
                        <materialDesign:PackIcon Kind="VolumeHigh"
                                                 Foreground="{DynamicResource SecondaryText}"/>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding PinCommand}">
                        <materialDesign:PackIcon Width="18">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="StarOutline"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelectionMode}" Value="True">
                                            <Setter Property="Kind" Value="Star"/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding PinToFirebaseCommand}">
                        <materialDesign:PackIcon Width="18">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="PinOutline"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                            <Setter Property="Kind" Value="Pin"/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding SettingsCommand}">
                        <materialDesign:PackIcon Kind="Cog"
                                                 Foreground="{DynamicResource SecondaryText}"/>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Click="Close_Click">
                        <materialDesign:PackIcon Kind="Close"
                                                 Foreground="{DynamicResource DangerColor}"/>
                    </Button>
                </StackPanel>

                <!-- ================= SCROLL ALL CONTENT ================= -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,6,0,0"
                              MaxHeight="540">

                    <StackPanel>

                        <!-- Word -->
                        <TextBlock Text="{Binding CurrentWord}"
                                   FontSize="17"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryText}"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,2"/>

                        <!-- Phonetic -->
                        <TextBlock Text="{Binding Phonetic}"
                                   FontSize="13"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SecondaryText}"
                                   Margin="0,0,0,10"/>

                        <!-- Original English -->
                        <TextBlock Text="{Binding OriginalText}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryText}"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap"
                                   TextAlignment="Justify"/>

                        <!-- Vietnamese -->
                        <TextBlock Text="{Binding CurrentTranslatedText}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryAccent}"
                                   Margin="0,0,0,14"
                                   TextWrapping="Wrap"
                                   TextAlignment="Justify"/>

                        <!-- WordList -->
                        <Border Background="{DynamicResource CardBackground}"
        CornerRadius="10"
        Padding="6"
        Margin="0,0,0,12"
        Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl ItemsSource="{Binding WordList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Text}"
                        Command="{Binding ClickCommand}"
                        CommandParameter="{Binding Text}"
                        Margin="2"
                        Padding="4,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>



                        <Separator Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVisibility}}"
                                   Margin="4,0"/>

                        <!-- Meanings -->
                        <ItemsControl ItemsSource="{Binding Meanings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4,0,0">
                                        <TextBlock Text="{Binding PartOfSpeech}"
                                                   FontSize="13"
                                                   FontStyle="Italic"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryText}"/>
                                        <TextBlock Text="{Binding DefinitionsText}"
                                                   FontSize="13"
                                                   Margin="10,2,0,0"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Justify"
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</Window>
