<UserControl x:Class="LexiScanUI.View.PopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Height="220"
             Width="360">

    <!-- ROOT -->
    <Grid Background="{DynamicResource AppBackground}">

        <!-- CARD -->
        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="12">

            <Grid>
                <!-- ROW DEFINITIONS -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Text -->
                    <RowDefinition Height="*"/>
                    <!-- Extra -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- ================= HEADER ================= -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TITLE -->
                    <TextBlock Text="Translation"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               VerticalAlignment="Center"/>

                    <!-- READ -->
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Read aloud"
                            Command="{Binding ReadAloudCommand}">
                        <materialDesign:PackIcon Kind="VolumeHigh"/>
                    </Button>

                    <!-- PIN -->
                    <Button Grid.Column="2"
        Style="{StaticResource MaterialDesignIconButton}"
        ToolTip="Save words"
        Command="{Binding PinCommand}">
                        <materialDesign:PackIcon Kind="StarOutline"/>
                    </Button>


                    <!-- SETTINGS -->
                    <Button Grid.Column="3"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Settings"
                            Command="{Binding SettingsCommand}">
                        <materialDesign:PackIcon Kind="Cog"/>
                    </Button>

                    <!-- CLOSE -->
                    <Button Grid.Column="4"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Close"
                            Command="{Binding CloseCommand}">
                        <materialDesign:PackIcon Kind="Close"
                                                 Foreground="{DynamicResource DangerColor}"/>
                    </Button>
                </Grid>

                <!-- ================= BODY ================= -->
                <TextBlock Grid.Row="1"
                           Margin="0,8,0,0"
                           Text="{Binding CurrentTranslatedText}"
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="{DynamicResource SecondaryText}"/>

                <!-- ================= LINK ================= -->
                <TextBlock Grid.Row="2"
                           Margin="0,10,0,0"
                           Text="View full translation"
                           FontSize="13"
                           Foreground="{DynamicResource PrimaryAccent}"
                           Cursor="Hand"/>

                <!-- ================= FOOTER ================= -->
                <Border Grid.Row="3"
                        Margin="0,10,0,0"
                        Height="1"
                        Background="{DynamicResource BorderColor}"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
