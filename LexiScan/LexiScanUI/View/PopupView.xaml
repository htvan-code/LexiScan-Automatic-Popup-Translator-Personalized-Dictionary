<Window x:Class="LexiScanUI.View.PopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        MinWidth="260"
        MaxWidth="500"
        Height="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Background="Transparent"
          MouseLeftButtonDown="DragArea_MouseLeftButtonDown">

        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="18"
                Padding="10">

            <Border.Effect>
                <DropShadowEffect BlurRadius="22"
                                  ShadowDepth="0"
                                  Opacity="0.32"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Toolbar -->
                    <RowDefinition Height="*"/>
                    <!-- Scroll Zone -->
                </Grid.RowDefinitions>

                <!-- ================= TOOLBAR ================= -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,6">

                    <!-- Volume -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding ReadAloudCommand}">
                        <materialDesign:PackIcon Kind="VolumeHigh"/>
                    </Button>

                    <!-- Star Select -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding PinCommand}">
                        <materialDesign:PackIcon Width="18">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="StarOutline"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelectionMode}" Value="True">
                                            <Setter Property="Kind" Value="Star"/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>

                    <!-- Pin Firebase -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding PinToFirebaseCommand}">
                        <materialDesign:PackIcon Width="18">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="PinOutline"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                            <Setter Property="Kind" Value="Pin"/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>

                    <!-- Settings -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Command="{Binding SettingsCommand}">
                        <materialDesign:PackIcon Kind="Cog"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            Click="Close_Click">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </StackPanel>


                <!-- ============ SCROLL CONTENT ============ -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- English -->
                        <TextBlock Text="{Binding OriginalSentence}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,2,0,8"
                                   TextWrapping="Wrap"
                                   TextAlignment="Justify"/>

                        <!-- Vietnamese -->
                        <TextBlock Text="{Binding CurrentTranslatedText}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryAccent}"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap"
                                   TextAlignment="Justify"/>


                        <!-- Select Words -->
                        <Border Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVisibility}}"
                                Padding="4">
                            <ItemsControl ItemsSource="{Binding WordList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Border>

                        <!-- Meanings -->
                        <ItemsControl ItemsSource="{Binding Meanings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4">
                                        <TextBlock Text="{Binding PartOfSpeech}"
                                                   FontWeight="Bold"
                                                   FontStyle="Italic"/>
                                        <TextBlock Text="{Binding DefinitionsText}"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</Window>
